<div class="row">
  <div class="large-7 columns">  
    <div class="row">
      <div class="large-10 columns">
        <label>Credit Card Holder's Name <small>required</small></label><br>
        <%= f.text_field :cc_name, :"required" => "true", :'placeholder' => "Joseph M. Larson" %>
        <small class="error">Please provide the name associated with this credit card.</small>
      </div>
    </div>

    <div class="row">
      <div class="large-10 columns">
        <label>Credit Card Number <small>required</small></label><br>
        <%= f.text_field :cc_number, :"required" => "true", :'placeholder' => "4012888888881881" %>
        <small class="error">Please provide the name credit card number.</small>
      </div> 
    </div>

    <div class="row">
      <div class="large-3 columns">
        <label>Credit Expiration Month <small>required</small></label><br>
        <%= f.text_field :cc_exp_month, :"required" => "true", :'placeholder' => "03" %>
        <small class="error">Please provide the credit card expiration month.</small>
      </div>

      <div class="large-3 columns">
        <label>Credit Expiration Year <small>required</small></label><br>
        <%= f.text_field :cc_exp_year, :"required" => "true", :'placeholder' => "2016" %>
        <small class="error">Please provide the credit card expiration year.</small>
      </div>

      <div class="large-3 columns">
        <label>Credit Card CVV Code <small>required</small></label><br>
        <%= f.text_field :cc_code, :"required" => "true", :'placeholder' => "321" %>
        <small class="error">Please provide the credit card CVV code from the back of the card.</small>
      </div>
      <div class="large-6 columns"></div>
    </div>
  </div>
  <div class="large-5 columns text-center">
    <div class="row collapse">
        <div class="large-12 columns">
          <ul class="pricing-table left-side">
            <li class="title">NLGS Vendor Registration</li>
            <li class="bullet-item"><strong>Senior Attendee Registration: </strong><span class="senior-attendee-price">$3795</span></li>
            <li class="bullet-item"><strong>Included 2x6 POP Space: </strong><span class="senior-pop-space"></span></li>
            <li class="bullet-item"><strong>Additional Attendees: </strong><span class="attendees-price"></span></li>
            <li class="bullet-item"><strong>Additional 2x2 POP Spaces: </strong><span class="pop-price"></span></li>
            <li class="bullet-item"><strong>New Product / Prototype Spaces: </strong><span class="proto-price"></span></li>
            <li class="bullet-item"><strong>Vendors In Action (VIA) Sponsorship: </strong><span class="via-price"></span></li>
            <li class="price">$3745.00</li>
          </ul>
        </div>
  </div>

</div>